{
    "semi": false,
    "useTabs": true,
    "singleQuote": true,
    "trailingComma": "none",
    "printWidth": 100,
    "pluginSearchDirs": ["."],
    "overrides": [
      {
        "files": "*.svelte",
        "options": { "parser": "svelte" }
      }
    ],
    "importOrder": ["^\\$lib/types/*", "<THIRD_PARTY_MODULES>", "^\\$env", "^\\$app", "^\\$lib/(?!components|types)/*", "^\\$lib/components/*", "^[./]" ],
    "importOrderSeparation": true, 
    "importOrderSortSpecifiers": true 
  }